# ARM架构 Mock ROS Bridge Docker镜像
# 明确指定ARM64平台

FROM --platform=linux/arm64 condaforge/miniforge3:latest

# 设置环境变量
ENV DEBIAN_FRONTEND=noninteractive
ENV LANG=C.UTF-8
ENV LC_ALL=C.UTF-8

# 设置工作目录
WORKDIR /app

# 复制依赖文件
COPY requirements.txt .

# 创建conda环境并安装依赖
RUN conda create -n rosbridge python=3.9 -y && \
    conda clean -afy

# 激活环境并安装依赖
SHELL ["conda", "run", "-n", "rosbridge", "/bin/bash", "-c"]
RUN pip install --no-cache-dir -r requirements.txt

# 复制源代码
COPY . .

# 暴露端口
EXPOSE 9091

# 容器启动后保持运行，不自动执行程序
CMD ["/bin/bash"]
